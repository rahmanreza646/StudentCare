<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    tools:context=".dashboard_activities.AttendanceActivity">


            <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/sky_blue">

        <ImageView
            android:id="@+id/backPageId"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_arrow"
            android:layout_margin="15dp"/>

        <TextView
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Attendance"
            android:fontFamily="@font/web_semi_bold"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

            <CalendarView
                android:id="@+id/id_calendar"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_margin="5dp"
                >

            </CalendarView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:layout_marginTop="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="20">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="2"
                        android:src="@drawable/ic_baseline_red_circle" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="18"
                        android:layout_gravity="center"
                        android:text=" Absent"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="sans-serif"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_below="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="20">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="2"
                        android:src="@drawable/ic_baseline_fiber_green_circle" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="18"
                        android:layout_gravity="center"
                        android:text=" Present"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="sans-serif"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/linear2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="20">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="2"
                        android:src="@drawable/ic_baseline_fiber_yellow_circle" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="18"
                        android:layout_gravity="center"
                        android:text=" Holiday"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="sans-serif"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
