<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:weightSum="5"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/id_result_subject"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1.50"
        android:gravity="center"
        android:textSize="16sp"
        android:fontFamily="@font/web_semi_bold"
        android:text="English">

    </TextView>



    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/sky_blue">

    </View>
    <TextView
        android:id="@+id/id_result_full_marks"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="0.85"
        android:gravity="center"
        android:text="100"
        android:fontFamily="@font/web_semi_bold"
        android:textSize="16sp"
        >

    </TextView>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/sky_blue">

    </View>
    <TextView
        android:id="@+id/id_result_obtain_marks"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="0.85"
        android:gravity="center"
        android:text="83"
        android:fontFamily="@font/web_semi_bold"
        android:textSize="16sp"
        >

    </TextView>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/sky_blue">

    </View>
    <TextView
        android:id="@+id/id_result_highest_mark"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight=".85"
        android:gravity="center"
        android:textSize="16sp"
        android:fontFamily="@font/web_semi_bold"
        android:text="90">

    </TextView>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/sky_blue">

    </View>
    <TextView
        android:id="@+id/id_result_comment"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Excellent"
        android:fontFamily="@font/web_semi_bold"
        android:textSize="16sp"
        >

    </TextView>
</LinearLayout>



