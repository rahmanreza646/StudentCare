<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:cardCornerRadius="9dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="8dp"
        app:cardElevation="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_class_day"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Monday"
                android:textColor="@color/sky_blue"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/web_semi_bold"
                android:background="#3B888888">

            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:weightSum="5"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="2"
                    android:textColor="@color/sky_blue"
                    android:text="Time"
                    android:textSize="16sp"
                    android:fontFamily="@font/web_semi_bold"
                    android:textStyle="bold">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Subject"
                    android:paddingLeft="15dp"
                    android:textColor="@color/sky_blue"
                    android:textSize="16sp"
                    android:fontFamily="@font/web_semi_bold"
                    android:textStyle="bold">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sky_blue"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:fontFamily="@font/web_semi_bold"
                    android:text="Room No">

                </TextView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <TextView
                    android:id="@+id/id_routine_time1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="09.00 AM - 09.45 AM"
                    android:fontFamily="@font/web_semi_bold"
                    android:layout_marginLeft="2dp"
                    android:textSize="15sp"
                    android:layout_weight=".95"
                    >

                </TextView>
                <TextView
                    android:id="@+id/id_routine_sub1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Social Science"
                    android:fontFamily="@font/web_semi_bold"
                    android:textSize="15sp"
                    android:layout_marginLeft="35dp"

                    android:layout_weight=".95"
                    >

                </TextView>

                <TextView
                    android:id="@+id/id_routine_room1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="101"
                    android:fontFamily="@font/web_semi_bold"
                    android:layout_weight="1"
                    android:layout_marginLeft="25dp"
                    android:textSize="15sp">

                </TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <TextView
                    android:id="@+id/id_routine_time2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="09.00 AM - 09.45 AM"
                    android:layout_marginLeft="2dp"
                    android:fontFamily="@font/web_semi_bold"

                    android:textSize="15sp"
                    android:layout_weight=".95"
                    >

                </TextView>
                <TextView
                    android:id="@+id/id_routine_sub2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bangla"
                    android:textSize="15sp"
                    android:fontFamily="@font/web_semi_bold"
                    android:layout_marginLeft="35dp"
                    android:layout_weight=".95"
                    >

                </TextView>

                <TextView
                    android:id="@+id/id_routine_room2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="101"
                    android:layout_weight="1"
                    android:layout_marginLeft="25dp"
                    android:fontFamily="@font/web_semi_bold"
                    android:textSize="15sp">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <TextView
                    android:id="@+id/id_routine_time3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="09.00 AM - 09.45 AM"
                    android:fontFamily="@font/web_semi_bold"
                    android:layout_marginLeft="2dp"

                    android:textSize="15sp"
                    android:layout_weight=".95"
                    >

                </TextView>
                <TextView
                    android:id="@+id/id_routine_sub3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:fontFamily="@font/web_semi_bold"
                    android:textSize="15sp"
                    android:layout_marginLeft="35dp"

                    android:layout_weight=".95"
                    >

                </TextView>

                <TextView
                    android:id="@+id/id_routine_room3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="101"
                    android:layout_weight="1"
                    android:fontFamily="@font/web_semi_bold"
                    android:layout_marginLeft="25dp"
                    android:textSize="15sp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <TextView
                    android:id="@+id/id_routine_time4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="09.00 AM - 09.45 AM"
                    android:fontFamily="@font/web_semi_bold"
                    android:layout_marginLeft="2dp"
                    android:textSize="15sp"
                    android:layout_weight=".95"
                    >

                </TextView>
                <TextView
                    android:id="@+id/id_routine_sub4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textSize="15sp"
                    android:fontFamily="@font/web_semi_bold"
                    android:layout_marginLeft="35dp"
                    android:layout_weight=".95"
                    >

                </TextView>

                <TextView
                    android:id="@+id/id_routine_room4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="101"
                    android:layout_weight="1"
                    android:fontFamily="@font/web_semi_bold"
                    android:layout_marginLeft="25dp"
                    android:textSize="15sp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <TextView
                    android:id="@+id/id_routine_time5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="09.00 AM - 09.45 AM"
                    android:fontFamily="@font/web_semi_bold"
                    android:layout_marginLeft="2dp"
                    android:textSize="15sp"
                    android:layout_weight=".95"
                    >

                </TextView>
                <TextView
                    android:id="@+id/id_routine_sub5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textSize="15sp"
                    android:fontFamily="@font/web_semi_bold"
                    android:layout_marginLeft="35dp"
                    android:layout_weight=".95"
                    >

                </TextView>

                <TextView
                    android:id="@+id/id_routine_room5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="101"
                    android:layout_weight="1"
                    android:fontFamily="@font/web_semi_bold"
                    android:layout_marginLeft="25dp"
                    android:textSize="15sp">

                </TextView>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>