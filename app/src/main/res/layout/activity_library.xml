<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dashboard_activities.LibraryActivity">

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/sky_blue">

    <ImageView
        android:id="@+id/backPageId"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back_arrow"
        android:layout_margin="15dp"/>

    <TextView
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Library"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"/>

</LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



        <androidx.cardview.widget.CardView
            android:id="@+id/id_class1_bangla"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="4dp"
            android:clickable="true"
            android:layout_height="70dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Class 1: Bangla"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                >

            </TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/id_class1_english"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="4dp"
            android:clickable="true"
            android:layout_height="70dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Class 1: English"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                >

            </TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/id_class1_math"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="4dp"
            android:clickable="true"
            android:layout_height="70dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Class 1:Mathematics"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                >

            </TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/id_class2_bangla"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="4dp"
            android:clickable="true"
            android:layout_height="70dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Class 2: Bangla"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                >

            </TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/id_class2_english"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="4dp"
            android:clickable="true"
            android:layout_height="70dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Class 2: English"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                >

            </TextView>
        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/id_class2_math"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="4dp"
                android:clickable="true"
                android:layout_height="70dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Class 2: Math"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    >

                </TextView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="4dp"
                android:clickable="true"
                android:layout_height="70dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Class 3: Bangla"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    >

                </TextView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="4dp"
                android:clickable="true"
                android:layout_height="70dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Class 3: English"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    >

                </TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="4dp"
                android:clickable="true"
                android:layout_height="70dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Class 3: Science"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    >

                </TextView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>