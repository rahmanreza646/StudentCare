<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="4dp"
        android:layout_gravity="center"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/id_home_task_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="English"
                    android:textColor="@color/violate"
                    android:fontFamily="@font/web_semi_bold"
                    android:textSize="20sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/id_task_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="158dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/id_home_task_name"
                    android:fontFamily="@font/web_semi_bold"
                    android:text="View"
                    android:textColor="@color/sky_blue"


                    android:textSize="15sp">

                </TextView>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="4"
                android:layout_marginTop="15dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/violate"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/web_semi_bold"
                    android:layout_marginLeft="5dp"
                    android:text="Created">

                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/violate"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/web_semi_bold"
                    android:text="Submission">

                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/violate"
                    android:textStyle="bold"
                    android:fontFamily="@font/web_semi_bold"
                    android:text="Evaluation">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/web_semi_bold"
                    android:textColor="@color/violate"
                    android:text="Status">

                </TextView>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="4"
                android:layout_marginTop="15dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/id_created_date"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/violate"
                    android:textSize="13sp"
                    android:fontFamily="@font/web_semi_bold"
                    android:text="17.09.2021">

                </TextView>
                <TextView
                    android:id="@+id/id_submission_date"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/violate"
                    android:fontFamily="@font/web_semi_bold"
                    android:textSize="13sp"
                    android:text="19.09.2021">

                </TextView>
                <TextView
                    android:id="@+id/id_evaluation_date"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/violate"
                    android:textSize="13sp"
                    android:fontFamily="@font/web_semi_bold"
                    android:text="22.09.2021">

                </TextView>

                <TextView
                    android:id="@+id/id_status_text"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:fontFamily="@font/web_semi_bold"
                    android:text="Incomplete">

                </TextView>

            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>